{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "..",
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["@tarojs/components"],
    "paths": {
      "@/*": [
        "tmagic-mini-program/src/*"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
  ],
  "compileOnSave": false,
}
